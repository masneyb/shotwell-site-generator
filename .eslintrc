---
env:
  es2021: true
  browser: true
extends:
  - eslint:recommended
parserOptions:
  ecmaVersion: latest
  sourceType: script
rules:
  indent:
    - error
    - 2
  linebreak-style:
    - error
    - unix
  max-len:
    - warn
    - code: 120
  quotes:
    - error
    - single
  semi:
    - error
    - always
  no-unused-vars:
    - warn
    - varsIgnorePattern: "^_"
      argsIgnorePattern: "^_"
  no-console:
    - warn
